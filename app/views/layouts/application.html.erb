<!DOCTYPE html>
<html>
<head>
  <title>Tasksbox</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  
  <%= javascript_include_tag "https://www.google.com/jsapi" %>


<!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

<!-- Optional theme -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">

<link href="//cdn.datatables.net/1.10.12/css/jquery.dataTables.min.css" rel= "stylesheet">

<script src="//cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js">
</script>

<!-- Latest compiled and minified JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

  <%= csrf_meta_tags %>
</head>
<body>
<div class = "container">
<% if user_signed_in? %>
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">Tasksbox</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
      <% controller.controller_name == "clients" ? "class = active": "" %>
      <li>

        <%= link_to clients_path do %>
             Clients
             <span class= "badge"><%= current_user.is_admin? ? Client.all.size : current_user.clients.size %></span>
             <% end %>
        </li>

        <li <%= controller.controller_name == "projects" ? "class= active dropdown" : "class=dropdown" %>>
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Projects<span class= "badge"><%= current_user.is_admin? ? Project.all.size : current_user.projects.size %> <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><%= link_to projects_path do %>
            <span class= "glyphicon glyphicon-th-list"></span>
            List All
            <% end %>
            </li>
            <li><%= link_to new_project_path do %>
            <span class= "glyphicon glyphicon-plus"></span>
            New Project
            <% end %>
            </li>
            <span class= ""</li>

          </ul>
        </li>
      </ul>
      <form class="navbar-form navbar-left">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Search">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
      </form>
      <ul class="nav navbar-nav navbar-right">
        
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Settings <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><%= link_to "Categories", categories_path %></li>
         
          </ul>
        </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= current_user.email %> <span class="caret"></span></a>
          <ul class="dropdown-menu">
          <li><%= link_to "Account Settings", edit_user_registration_path %></li>
          <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
          </ul>
        </li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>


<% if notice %>
 <div class="alert alert-success" role= "alert"><%= notice %></div>
 <% end %>

 <% if alert %>
 <div class="alert alert-danger" role= "alert"><%= alert %></div>
 <% end %>


 <%#= current_user.email %>

<%#= link_to "clients", clients_path %>
<%#= link_to "projects", projects_path %> 
<%#= link_to "categories", categories_path %>

<%#= link_to "Edit Account", edit_user_registration_path %>
<%#= link_to "Logout", destroy_user_session_path, method: :delete %>

<% else %>

<%= link_to "Login", new_user_session_path %>
<%= link_to "Sign Up", new_user_registration_path %>

<% end %>

<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<p> This is before yield</p>
<%= yield %>
<p> This is after yield</p>

</body>
</html>


